<div class="container">
  <h2>Bookmarks</h2>
  <hr>
  <a class="btn btn-primary" href="/">Home</a>
  <div class="col-lg-4 text-center">
    <form id="bookMarkEntryForm" action="/api/bookmarks/add" method="POST">
      <div class="form-group">
        <label for="bcity">City:</label>
        <input type="text" id="bcity" class="form-control text-center" placeholder="e.g.Atlanta">
      </div>
      <div class="form-group">
        <label for="baddress">Address:</label>
        <input type="text" class="form-control text-center" id="baddress" placeholder="e.g.123 Peachtree pkwy">
      </div>
      <div class="form-group">
        <label for="notes">Notes:</label>
        <input type="text" class="form-control text-center" id="notes" placeholder="e.g.Must visit">
      </div>
      <div class="form-group">
        <label for="locationImage">Image URL:</label>
        <input type="text" class="form-control text-center" id="locationImage" placeholder="">
      </div>
      <button class="btn btn-block my-2" type="submit" id="bookmark">Add Bookmark</button>
    </form>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/bookmark.js"></script>